PivotItem {
    padding: 10px 12px;
    color: black;
    background-color: transparent;
    border: none;
    outline: none;
    margin: 0;
}

PivotItem[isSelected=true]:hover {
    color: rgba(0, 0, 0, 0.63);
}

PivotItem[isSelected=true]:pressed {
    color: rgba(0, 0, 0, 0.53);
}

PivotItem[isSelected=false]:pressed {
    color: rgba(0, 0, 0, 0.75);
}

Pivot {
    border: none;
    background-color: transparent;
}

#view {
    background-color: transparent;
}